.huizi-data-items {
  height: 300rpx;
  position: relative;
}
.huizi-data-items::before {
  content: '';
  display: block;
  width: 15rpx;
  height: 15rpx;
  z-index: 9;
  border-radius: 50%;
  background-color: red;
  position: absolute;
  top: 50%;
  left: 3px;
  margin-top: -8rpx;
}
.huizi-data-items::after {
  content: '';
  display: block;
  width: 4rpx;
  height: 100%;
  background-color: #CCCCCC;
  position: absolute;
  top: 0;
  left: 6px;
}
.huizi-data-items-item {
  height: 80%;
  width: 90%;
  background-color: #ea6566;
  margin: 0 auto ;
  position: relative;
  top: 15%;
  box-shadow: 0 0 5px #555555;
  border-radius: 5px;
  box-sizing: border-box;
  padding: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.huizi-data-items-item-r {
  font-size: 14px;
  -webkit-box-flex: 4;
