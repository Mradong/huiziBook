.huizi {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.huizi-none {
  -webkit-box-flex: 1;
          flex-grow: 1;
  -webkit-flex-grow: 1;
  color: #000;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center ;
  -webkit-align-items: center ;
          align-items: center ;
}
.huizi-none .message {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
}
.huizi-data-items {
  height: 121rpx;
  position: relative;
  margin: 5rpx;
}
.huizi-data-items::before {
  content: '';
  display: block;
  width: 15rpx;
  height: 15rpx;
  z-index: 9;
  border-radius: 50%;
  background-color: red;
  position: absolute;
  top: 50%;
  left: 3px;
  margin-top: -8rpx;
}
.huizi-data-items::after {
  content: '';
  display: block;
  width: 4rpx;
  height: 100%;
  background-color: #CCCCCC;
  position: absolute;
  top: 0;
  left: 6px;
}
.huizi-data-items-item {
  height: 90rpx;
  width: 95%;
}

