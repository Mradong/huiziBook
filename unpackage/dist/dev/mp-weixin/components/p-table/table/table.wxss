.custom-area {
  width: 95%;
  margin: 30rpx auto;
  color: #505050;
  background-color: white;
  font-size: 14px;
  line-height: 150%;
  text-align: center;
}
.custom-area .tc, .custom-area .td, .custom-area .tf {
    width: 100%;
    height: 60rpx;
    color: #a6a6a6;
    font-size: 13px;
    line-height: 60rpx;
    border: 1px solid #f2f2f2;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    padding: 0 30rpx;
    box-sizing: border-box;
}
.custom-area .tc-r, .custom-area .td-r, .custom-area .tf-r {
      -webkit-box-flex: 2;
      -webkit-flex: 2;
              flex: 2;
      text-align: left;
}
.custom-area .tc-l, .custom-area .td-l, .custom-area .tf-l {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: right;
}
.custom-area .td {
    height: 200rpx;
}
.custom-area .td-r {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: left;
}
.custom-area .td-l {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: left;
}
.custom-area .tf {
    height: 80rpx;
}
.custom-area .tf-r {
      -webkit-box-flex: 2;
      -webkit-flex: 2;
              flex: 2;
      text-align: left;
}
.custom-area .tf-l {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      text-align: right;
}
.custom-area .tf-l .tf-button {
        margin-top: 12rpx;
        width: 200rpx;
        height: 56rpx;
        color: #90c0ef;
        box-shadow: #90c0ef solid 1px;
        border-radius: 4px;
        font-size: 13px;
        line-height: 56rpx;
        text-align: center;
