  color: #ffffff;
  font-size: 18px;
  line-height: 150%;
  text-align: left;
}
.my-top .my-login image {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 28rpx;
  right: 40rpx;
}
