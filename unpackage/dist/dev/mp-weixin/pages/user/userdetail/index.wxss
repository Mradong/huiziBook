.user-message {
  width: 94%;
  height: 278rpx;
  background-color: #DD524D;
  margin: 15rpx auto 0;
  border-radius: 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  color: #fff;
  font-size: 26rpx;
}
.user-message-l {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  padding: 20rpx;
}
.user-message-l-top {
  font-size: 32rpx;
}
.user-message-l-con {
  margin-top: 40rpx;
}
.user-message-l-con text {
  font-size: 26rpx;
}
.user-message-l-con view {
  margin: 12rpx 0;
  font-size: 50rpx;
}
.user-message-r {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  margin: 20rpx;
}
.noData {
  margin-top: 300rpx;
  text-align: center;
  color: #555555;
}
.noData image {
  width: 80rpx;
  height: 80rpx;
}
.noData-hint {
  line-height: 100rpx;
  height: 100rpx;
}
.noData-hint .noData-text {
  color: #808080;
  font-size: 26rpx;
  text-align: center;
}
.noData-hint .none-userData-img-button {
  width: 160rpx;
  height: 60rpx;
  margin: 0 auto;
}
.noData-hint .none-userData-img-button button {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  color: #a6a6a6;
}
.create {
  position: fixed;
  bottom: 0;
  width: 100%;
  color: #DD524D;
}

