.red {
  color: red;
}
.lists-top {
  width: 721rpx;
  height: 308rpx;
  background-color: #eb6869;
  margin: 20rpx auto;
  padding: 25rpx;
  box-sizing: border-box;
  color: #fff;
  position: relative;
}
.lists-top-title {
  font-size: 24rpx;
}
.lists-top-title::before {
  content: '';
  display: block;
  width: 0;
  height: 0;
  border-left: 1rpx solid transparent;
  border-right: 54rpx solid transparent;
  border-bottom: 60rpx solid #00a1ff;
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
  position: absolute;
  top: 0;
  right: -2rpx;
}
.lists-top-con {
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
          align-items: flex-end;
}
.lists-top-con-r {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
}
.lists-top-con-r .self_m {
  font-size: 24rpx;
  padding-top: 25rpx;
}
.lists-top-con-l {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  font-size: 24rpx;
}
.lists {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100rpx;
  border-bottom: 1px solid #C8C7CC;
  margin-bottom: 15rpx;
}
.lists-num {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  color: #383838;
  font-size: 28rpx;
  line-height: 100rpx;
  text-align: center;
}
.lists-num text {
  color: #383838;
  font-size: 48rpx;
}
.lists-detail {
  -webkit-box-flex: 7;
  -webkit-flex: 7;
          flex: 7;
  color: #383838;
  font-size: 28rpx;
  line-height: 150%;
  text-align: left;
}
.lists-detail-y {
  float: left;
  width: 80rpx;
  height: 80rpx;
  border: 1px solid #DD524D;
  -webkit-transform: rotate(-50deg);
          transform: rotate(-50deg);
  border-radius: 50%;
  text-align: center;
  line-height: 80rpx;
  background-color: #DD524D;
  color: #FFFFFF;
  margin-right: 20rpx;
  font-size: 38rpx;
  filter: alpha(opacity=60);
  /* CSS3 standard */
  opacity: 0.6;
}
.lists-img {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 18rpx;
  left: -24rpx;
}
.lists-img image {
  width: 100%;
  height: 100%;
}

