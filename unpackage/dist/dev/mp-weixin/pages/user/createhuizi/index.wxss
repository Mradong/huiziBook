.form-row {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1px solid #c8c7cc;
  margin: 10rpx 20rpx;
  position: relative;
}
.form-row .warn {
  position: absolute;
  right: 60rpx;
  top: 0;
  font-size: 14px;
  color: #dd524d;
  display: block;
}
.form-row-title {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
          flex: 3;
  color: grey;
  text-align: left;
}
.form-row-input {
  -webkit-box-flex: 5;
  -webkit-flex: 5;
          flex: 5;
  height: 100rpx;
  text-align: left;
}
.form-row-select {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
          flex: 2;
  text-align: left;
}
.form-row-select text {
  color: grey;
  position: absolute;
  top: 0;
  right: 15rpx;
  font-size: 60rpx;
}
.form-row-select view.time {
  color: #000;
}
.form-row-select view {
  color: grey;
  padding-right: 20rpx;
  display: inline-block;
}
.form-fixation-title {
  -webkit-box-flex: 4 !important;
  -webkit-flex: 4 !important;
          flex: 4 !important;
}
.form .fixation {
  height: 140rpx;
}
.form .fixation-dec {
  position: absolute;
  top: 56rpx;
  font-size: 22rpx;
  color: #DD524D;
}
.create {
  margin-top: 200rpx;
  width: 90%;
  color: #fff;
}

